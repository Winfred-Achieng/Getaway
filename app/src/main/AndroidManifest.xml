<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Getaway"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Getaway"
        tools:targetApi="31">



        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add LaunchActivity as the second activity -->
        <activity
            android:name=".LaunchActivity"
            android:theme="@style/Theme.Getaway.NoActionBar"
            android:exported="true" />




        <!-- Keep MainActivity, RegistrationActivity, and LoginActivity as they are -->

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <!-- No intent-filter for MainActivity -->
        </activity>

        <activity
            android:name=".RegistrationActivity"
            android:exported="true">
            <!-- No intent-filter for RegistrationActivity -->
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <!-- No intent-filter for LoginActivity -->
        </activity>



        <activity
            android:name=".GroupHomepageActivity"
            android:exported="true">
            <!-- No intent-filter for LoginActivity -->
        </activity>

        <activity
            android:name=".MembersActivity"
            android:exported="true">
            <!-- No intent-filter for LoginActivity -->
        </activity>

        <activity
            android:name=".NewGroupActivity"
            android:exported="true">
            <!-- No intent-filter for LoginActivity -->
        </activity>

        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <!-- No intent-filter for LoginActivity -->
        </activity>
        <activity
            android:name=".GroupsActivity"
            android:exported="true">
            <!-- No intent-filter for LoginActivity -->
        </activity>


    </application>

</manifest>
